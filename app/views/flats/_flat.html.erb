<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <p class="card-title">
      <strong>Name:</strong>
      <%= flat.name %>
    </p>

    <p class="card-text">
      <strong>Address:</strong>
      <%= flat.address %>
    </p>

    <p class="card-text">
      <strong>Description:</strong>
      <%= flat.description %>
    </p>

    <p class="card-text">
      <strong>Price per Night:</strong>
      <%= flat.price_per_night %>
    </p>

    <p class="card-text">
      <strong>Number of Guests:</strong>
      <%= flat.number_of_guests %>
    </p>

    <%= link_to "More info", flat, class: "btn btn-outline-primary text-decoration-none"%>
    <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-warning text-decoration-none"%>
    <%= link_to "Delete", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Do you want to delete this flat?"}, class: "btn btn-outline-danger text-decoration-none"%>
  </div>
</div>
