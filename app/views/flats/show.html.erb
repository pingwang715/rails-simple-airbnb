<div class="map" style="background-image: url('<%= @flat.picture_url %>')"></div>

<div class="container-fluid m-5">
  <div class="card bg-body-secondary">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h2 class="card-title">
        <%= @flat.name%>
      </h2>
      <p class="card-text">
        <%= @flat.address%>
      </p>
    </div>
  </div>
</div>
<div>

<div class="container-fluid m-5">
  <div class="card bg-body-secondary">
    <div class="card-body">
      <h2 class="card-title">
        A bit more about this flat...
      </h2>
      <p class="card-text">
        <%= @flat.description%>
      </p>
    </div>
  </div>
</div>

<div class="container-fluid m-5">
  <div class="card bg-body-secondary">
    <div class="card-body">
      <h2 class="card-title">
        Details
      </h2>
      <p class="card-text">
        <i class="fa-solid fa-euro-sign"></i>
        <%= @flat.price_per_night%>
      </p>
      <p class="card-text">
        <i class="fa-solid fa-user"></i>
        <%= @flat.number_of_guests%>
      </p>
    </div>
  </div>
</div>

<div class="container-fluid m-5">
  <%= link_to "Edit this flat", edit_flat_path, class: "btn btn-warning"%>
  <%= link_to "Delete this flat", flat_path(@flat), data: { turbo_method: :delete, turbo_confirm: "Do you want to delete this flat?"}, class: "btn btn-danger"%>
  <%= link_to "Back to list", flats_path, class: "btn btn-primary" %>
</div>
